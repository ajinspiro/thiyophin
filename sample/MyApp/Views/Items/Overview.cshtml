@model MyApp.Models.Item
@{
    var message = "Hello Theo";
    var items = new List<string> {"item1","item2","item3"};
    var isLoggedIn = true;
}

<p>@message, This is the name of the item @Model.Name. Wait for it.</p>
<ul>
@foreach(var item in items){
    <li>@item</li>
}
</ul>
@if (isLoggedIn){
    <p>You are logged in</p>
}
else{
    <p>Sign in</p>
}

<form asp-action="Submit" >
 <div>
 <input asp-for="Name" />
 </div>

 <button type="submit">Submit</button>
</form>