@using System.Diagnostics.Eventing.Reader
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library System - Books</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header>
        <h1>Library</h1>
        <nav>
            <h3>Members</h3>
            <h3>Books</h3>
            <h3>Checkouts</h3>
        </nav>
    </header>
    <div class="search-bar">
        <div class="search-bar-label">
            Books
        </div>
        <div class="search-bar-input">
            <form method="post" action="/Books/Search">
                <input type="text" name="search" placeholder="Name">
                <button id="clear-btn" type="reset">Clear</button>
                <input type="submit" value="Search">
            </form>
     </div>
        <div class="search-bar-add-btn">
            <a href="/books/add"><button>Add</button></a>
        </div>
    </div>
    <div class="members-table">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>ISBN</th>
                    <th>Added on</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
              @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Name</td>
                        <td>@x.ISBN</td>
                        <td>@x.AddedOn</td>
                        @if (@x.IsCheckedOut){
                            <td style="color: green;">In</td>
                        }else{
                            <td style="color: red;">Out</td>
                        }    
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>