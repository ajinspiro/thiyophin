@using System.Diagnostics.Eventing.Reader
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library System - Checkout</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header>
        <h1><a href="/">Library</a></h1>
        <nav>
            <h3><a href="/Members">Members</a></h3>
            <h3><a href="/Books">Books</a></h3>
            <h3><a href="/Checkouts">Checkouts</a></h3>
        </nav>
    </header>
    <h1>Checkout</h1>
    <div class="search-bar">
        <div class="search-bar-input">
            <form method="post" action="/Members/Search">
                <input type="text" name="search" placeholder="Search user">
                <button id="clear-btn" type="reset">Clear</button>
                <input type="submit" value="Search">
            </form>
        </div>
        <div class="search-bar-input">
            <form method="post" action="/Books/Search">
                <input type="text" name="search" placeholder="Search book">
                <button id="clear-btn" type="reset">Clear</button>
                <input type="submit" value="Search">
            </form>
        </div>
        <div class="search-bar-add-btn">
            <a href="/members/add"><button>Checkout</button></a>
        </div>
    </div>
    <div class="members-table">
        <table>
            <thead>
                <tr>
                    <th>User name</th>
                    <th>Book name</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>x.Name</td>
                        <td>x.Book</td>
                    </tr>
            </tbody>
        </table>
    </div>
</body>
</html>